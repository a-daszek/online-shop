<%- include("../../shared/includes/head", { pageTitle: "Login"}) %><!--with the dash we are taking raw html code and not escaping it-->
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>Login</h1>
        <form action="/login" method="POST"><!-- with the action we control where the request is sent to, with method we define which kind of request is sent-->
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
            <p>
                <label for="email">E-mail</label>
                <input type="email" id="email" name="email" required> <!--the required attribute ensures that this can't be submitted empty-->
            </p>
            <p>
                <label for="password">Password</label>
                <input type="password" id="password" name="password" minlength="6" required> <!--the required attribute ensures that this can't be submitted empty-->
            </p>
            <button class="btn">Login</button>
            <p id="switch-form"><a href="/signup">Create account</a></p>
        </form>
    </main>
<%- include("../../shared/includes/footer") %>