<%- include("../../shared/includes/head", { pageTitle: "All products"}) %><!--with the dash we are taking raw html code and not escaping it-->
<link rel="stylesheet" href="/styles/products.css">
<script src="/scripts/product-management.js" defer></script>
</head>
<body>
    <%- include("../../shared/includes/header") %>
    <main>
        <h1>Product administration</h1>
        <section>
            <h2>Manage products</h2>
            <p><a href="/admin/products/new" class="btn">Add product</a></p>
        </section>
        <section>
            <ul id="products-grid">
                <% for (const product of products) { %>
                <li>
                    <%- include("../../shared/includes/product-item", { product: product }) %> <!--product on the right is from the for loop-->
                </li>
                <% } %>
            </ul>
        </section>
    </main>
<%- include("../../shared/includes/footer") %>